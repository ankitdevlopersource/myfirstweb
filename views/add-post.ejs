<%- include('partials/header') %>
<style>
    /* You can keep your old form styles */
    .form-container { padding: 20px; background-color: #fff; border-radius: 8px; }
    form { display: flex; flex-direction: column; max-width: 800px; gap: 15px; } /* Increased width */
    form input, form select, form button { padding: 10px; font-size: 1em; border-radius: 5px; border: 1px solid #ccc; }
    form button { background-color: #28a745; color: white; cursor: pointer; border: none; }
</style>

<script src="https://cdn.tiny.cloud/1/mkgaokc785gp091vtix4br9xr27rxqocmcgz6ztkuj110n2l/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

<script>
  tinymce.init({
    selector: '#content', // This targets your <textarea>
    plugins: 'lists link image code help wordcount',
    toolbar: 'undo redo | blocks | bold italic underline | forecolor backcolor | alignleft aligncenter alignright | bullist numlist | link image | code | help'
  });
</script>

<div class="form-container">
    <h2>Add New Post</h2>
    <form action="/admin/add" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>
        
        <label for="content">Details (Blog Content):</label>
        <textarea id="content" name="content"></textarea>
        
        <label for="externalLink">External Link (Optional):</label>
        <input type="text" id="externalLink" name="externalLink">
        
        <label for="category">Category:</label>
        <select id="category" name="category">
            <option value="New Updates">New Updates</option>
            <option value="Admit Card">Admit Card</option>
            <option value="Latest Result">Latest Result</option>
        </select>
        <label>
            <input type="checkbox" name="isNew" checked> Mark as New
        </label>
        <button type="submit">Add Post</button>
    </form>
</div>
<%- include('partials/footer') %>