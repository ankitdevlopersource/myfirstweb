<%- include('partials/header') %>
<style>
    .login-container { max-width: 400px; margin: 50px auto; padding: 20px; background: #fff; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
    .login-container h2 { text-align: center; margin-bottom: 20px; }
    .login-container form { display: flex; flex-direction: column; gap: 15px; }
    .login-container input { padding: 12px; border: 1px solid #ccc; border-radius: 5px; }
    .login-container button { padding: 12px; background: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 1em; }
</style>

<div class="login-container">
    <h2>Admin Login</h2>
    <form action="/login" method="POST">
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Login</button>
    </form>
</div>

<%- include('partials/footer') %>